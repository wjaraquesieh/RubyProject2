<div class="container">
  <h1 class="mt-5">Payment Types</h1>
  <table class="table table-striped table-hover mt-3">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @paymentTypes.each_with_index do |payment, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= payment.description %></td>
          <td>
            <!-- Edit Button -->
            <button
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#editModal"
              data-payment-id="<%= payment.id %>"
              data-payment-name="<%= payment.description %>"
            >
              Edit
            </button>

            <!-- Delete Button -->
            <button
              class="btn btn-danger"
              data-bs-toggle="modal"
              data-bs-target="#deleteModal"
              data-payment-id="<%= payment.id %>"
              data-payment-name="<%= payment.description %>"
            >
              Delete
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex align-items-center justify-content-center">
    <%= paginate @paymentTypes %>
  </div>
</div>


<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Payment Type</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: paymentType_path(:id), method: :patch, id: "editPaymentTypeForm", local: true do |f| %>
          <div class="mb-3">
            <%= f.label :description, "PaymentType Name", class: "form-label" %>
            <%= f.text_field :description, class: "form-control", id: "paymentTypeNameInput" %>
          </div>
          <%= f.submit "Save Changes", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the category <strong id="deleteCategoryName"></strong>?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= button_to "Delete", category_path(:id), method: :delete, id: "deleteCategoryButton", class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>


<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Edit Modal
    const editModal = document.getElementById("editModal");
    editModal.addEventListener("show.bs.modal", (event) => {
      const button = event.relatedTarget;
      const categoryId = button.getAttribute("data-category-id");
      const categoryName = button.getAttribute("data-category-name");

      // Populate form action and input
      const form = document.getElementById("editCategoryForm");
      form.action = `/categories/${categoryId}`;
      document.getElementById("categoryNameInput").value = categoryName;
    });

    // Delete Modal
    const deleteModal = document.getElementById("deleteModal");
    deleteModal.addEventListener("show.bs.modal", (event) => {
      const button = event.relatedTarget;
      const categoryId = button.getAttribute("data-category-id");
      const categoryName = button.getAttribute("data-category-name");

      // Populate delete button action and category name
      const deleteButton = document.getElementById("deleteCategoryButton");
      deleteButton.formAction = `/categories/${categoryId}`;
      document.getElementById("deleteCategoryName").textContent = categoryName;
    });
  });

</script>