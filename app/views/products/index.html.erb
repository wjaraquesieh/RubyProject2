<div class="container">
  <div class="d-flex justify-content-between align-items-center mt-5">
    <h1>Products</h1>
    <%= link_to "Add Products", new_product_path, class: "btn btn-success" %>
  </div>

  <% if @products.any? %>
    <table class="table table-striped table-hover mt-3">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Image</th>
          <th scope="col">Name</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each_with_index do |product, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><img src="<%= product.image %>" alt="<%= product.name %>" class="img-thumbnail" style="width: 100px;"></td>
            <td><%= product.name %></td>
            <td><%= link_to "Details", product_path(product), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex align-items-center justify-content-center">
      <%= paginate @products %>
    </div>
  <% else %>
    <p>No records were found for your search.</p>
  <% end %>
</div>

